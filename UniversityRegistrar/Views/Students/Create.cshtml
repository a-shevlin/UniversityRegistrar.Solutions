@{
  Layout = "_Layout";
}

@model University.Models.Student;

<div>
  <h1>Add a new Student</h1>
</div>
<div class="container">
  @using (Html.BeginForm())
  {
    @Html.Label("Name: ");
    @Html.TextBoxFor(model =>  model.Name);
    <br>
    @Html.Label("Date: ")
    @Html.TextBoxFor(model => model.EnrollmentDate, new { @type="date"});
    <br>
    <input type="submit" value="Add Student"/>
  }
  <br>
  @Html.ActionLink("See Students", "Index", "Students", null, new { @class="htmlButton"})
</div>